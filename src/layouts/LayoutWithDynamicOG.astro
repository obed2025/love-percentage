---
import BaseLayout from './BaseLayout.astro';
import type { Props as P } from '../components/SocialMedia/OpenGraphImage.astro';
import type { Props as Q } from './BaseLayout.astro';
import OpenGraphImage from '../components/SocialMedia/OpenGraphImage.astro';
import TwitterCardImage from '../components/SocialMedia/TwitterCardImage.astro';

type Props = P & Q;

const { names, percentage, title, desc } = Astro.props;
---

<BaseLayout {title} {desc}>
  <OpenGraphImage {names} {percentage} slot="open-graph-image" />
  <TwitterCardImage slot="twitter-card-image">
    <OpenGraphImage {names} {percentage} />
  </TwitterCardImage>

  <slot />
</BaseLayout>
